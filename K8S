# k8s/argocd-application.yaml
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: sea-sos-app
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "0"
spec:
  project: default
  source:
    repoURL: 'https://github.com/Sukuna9977/Sea-SOS.git'  # Your actual repo
    path: '.'
    targetRevision: 'master'
    directory:
      recurse: true
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: sea-sos
  syncPolicy:
    automated:
      prune: true          # Delete resources if removed from git
      selfHeal: true       # Auto-correct drift
      allowEmpty: false
    syncOptions:
    - CreateNamespace=true
    - ApplyOutOfSyncOnly=true
    - PruneLast=true
